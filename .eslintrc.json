{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "warn",
            "ignorePackages"
        ],
        "max-len": [
            "warn",
            {
                "code": 80,
                "ignoreUrls": true,
                "tabWidth": 2,
                "ignoreComments": false,
                "comments": 65,
                "ignorePattern": [
                    "^\\s*var\\s.+=\\s*require\\s*\\(", 
                    "^\\s*import\\s.+\\s*from\\s*\\("
                ]
            }
        ],
        "eqeqeq": [
            "warn",
            "smart"
        ]
    }
}
